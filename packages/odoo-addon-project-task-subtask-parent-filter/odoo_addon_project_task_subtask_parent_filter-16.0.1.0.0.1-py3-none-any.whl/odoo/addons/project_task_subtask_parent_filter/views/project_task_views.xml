<odoo>
    <record id="project_task_subtask_parent_filter_view_task_form2" model="ir.ui.view">
        <field name="name">project.task.subtask.parent.filter.view.task.form2</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2" />
        <field name="arch" type="xml">
            <xpath
                expr="//page[@name='extra_info']//field[@name='parent_id']"
                position='attributes'
            >
                <attribute name="domain">[('project_id', '=', project_id)]</attribute>
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//field[@name='user_ids']" position='after'>
                <field
                    name="parent_id"
                    attrs="{'invisible': [('allow_subtasks', '=', False)]}"
                    domain="[('project_id', '=', project_id)]"
                />
            </xpath>
        </field>
    </record>
</odoo>
