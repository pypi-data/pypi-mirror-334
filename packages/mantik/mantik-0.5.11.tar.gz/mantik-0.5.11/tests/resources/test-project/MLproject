name: mantik-test

entry_points:
  main:
    parameters:
      print: {type: "string", default: "test"}
    command: python main.py {print}
  # This entry point exists to allow a successful job for integration tests
  echo:
    parameters:
      output: {type: "string", default: "test"}
    command: echo {output}
  multi-line:
    parameters:
      print: {type: "string", default: "test"}
    command: >
      python
      main.py
      {print}
        --o option1
        --i option2
