<odoo>
    <record id="project_subtask_default_project_view_task_form2" model="ir.ui.view">
        <field name="name">project.subtask.default.project.view.task.form2</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='child_ids']" position='attributes'>
                <attribute
                    name="context"
                    operation="update"
                >{'default_display_project_id': project_id}</attribute>
            </xpath>
        </field>
    </record>
</odoo>
