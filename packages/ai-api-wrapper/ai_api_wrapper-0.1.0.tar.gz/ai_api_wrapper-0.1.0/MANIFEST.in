# 包含基础文档
include README.md
include LICENSE
include CHANGELOG.md
include pyproject.toml
include setup.py

# 包含配置文件
recursive-include src/ai_api_wrapper/config *.yaml *.yml

# 包含示例
recursive-include examples *.py *.yaml *.yml

# 包含文档
recursive-include docs *.md *.rst *.txt *.html

# 测试文件
recursive-include tests *.py

# 排除不需要的文件
global-exclude *.py[cod] __pycache__ *.so .*.swp .DS_Store
global-exclude .git* .coverage .tox .pytest_cache build dist *.egg-info