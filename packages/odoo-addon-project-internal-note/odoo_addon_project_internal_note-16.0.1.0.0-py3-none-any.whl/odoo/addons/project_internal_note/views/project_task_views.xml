<odoo>
    <record id="project_internal_note_view_task_form2" model="ir.ui.view">
        <field name="name">project.internal.note.view.task.form2</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="internal_notes" string="Project Internal Notes">
                    <field name="project_internal_note" type="html" />
                    <div class="d-none oe_clear" />
                </page>
            </xpath>
        </field>
    </record>
</odoo>
