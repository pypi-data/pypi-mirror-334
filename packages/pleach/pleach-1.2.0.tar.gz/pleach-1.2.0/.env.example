# Description: Example of .env file
# Usage: Copy this file to .env and change the values
#        according to your needs
#        Do not commit .env file to git
#        Do not change .env.example file

# Config directory
# Directory where files, logs and database will be stored
# Example: PLEACH_CONFIG_DIR=~/.pleach
PLEACH_CONFIG_DIR=

# Save database in the config directory
# Values: true, false
# If false, the database will be saved in Pleach's root directory
# This means that the database will be deleted when Pleach is uninstalled
# and that the database will not be shared between different virtual environments
# Example: PLEACH_SAVE_DB_IN_CONFIG_DIR=true
PLEACH_SAVE_DB_IN_CONFIG_DIR=

# Database URL
# Postgres example: PLEACH_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/pleach
# SQLite example:
PLEACH_DATABASE_URL=sqlite:///./pleach.db

# Database connection retry
# Values: true, false
# If true, the database will retry to connect to the database if it fails
# Example: PLEACH_DATABASE_CONNECTION_RETRY=true
PLEACH_DATABASE_CONNECTION_RETRY=false

# Cache type
PLEACH_LANGCHAIN_CACHE=SQLiteCache

# Server host
# Example: PLEACH_HOST=127.0.0.1
PLEACH_HOST=

# Worker processes
# Example: PLEACH_WORKERS=1
PLEACH_WORKERS=

# Server port
# Example: PLEACH_PORT=7860
PLEACH_PORT=

# Logging level
# Example: PLEACH_LOG_LEVEL=critical
PLEACH_LOG_LEVEL=

# Path to the log file
# Example: PLEACH_LOG_FILE=logs/pleach.log
PLEACH_LOG_FILE=

# Path to the frontend directory containing build files
# Example: PLEACH_FRONTEND_PATH=/path/to/frontend/build/files
PLEACH_FRONTEND_PATH=

# Whether to open the browser after starting the server
# Values: true, false
# Example: PLEACH_OPEN_BROWSER=true
PLEACH_OPEN_BROWSER=

# Whether to remove API keys from the projects saved in the database
# Values: true, false
# Example: PLEACH_REMOVE_API_KEYS=false
PLEACH_REMOVE_API_KEYS=

# Whether to use RedisCache or ThreadingInMemoryCache or AsyncInMemoryCache
# Values: async, memory, redis
# Example: PLEACH_CACHE_TYPE=memory
# If you want to use redis then the following environment variables must be set:
# PLEACH_REDIS_HOST (default: localhost)
# PLEACH_REDIS_PORT (default: 6379)
# PLEACH_REDIS_DB (default: 0)
# PLEACH_REDIS_CACHE_EXPIRE (default: 3600)
PLEACH_CACHE_TYPE=

# Set AUTO_LOGIN to false if you want to disable auto login
# and use the login form to login. PLEACH_SUPERUSER and PLEACH_SUPERUSER_PASSWORD
# must be set if AUTO_LOGIN is set to false
# Values: true, false
PLEACH_AUTO_LOGIN=

# Superuser username
# Example: PLEACH_SUPERUSER=admin
PLEACH_SUPERUSER=

# Superuser password
# Example: PLEACH_SUPERUSER_PASSWORD=123456
PLEACH_SUPERUSER_PASSWORD=

# Should store environment variables in the database
# Values: true, false
PLEACH_STORE_ENVIRONMENT_VARIABLES=

# STORE_URL
# Example: PLEACH_STORE_URL=https://api.pleach.store
# PLEACH_STORE_URL=

# DOWNLOAD_WEBHOOK_URL
#
# PLEACH_DOWNLOAD_WEBHOOK_URL=

# LIKE_WEBHOOK_URL
#
# PLEACH_LIKE_WEBHOOK_URL=

# Value must finish with slash /
#BACKEND_URL=http://localhost:7860/
BACKEND_URL=